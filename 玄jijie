<script>
// ã€ä¿®æ­£ã€‘è¿™æ˜¯å®Œæ•´çš„ã€å¯è¿è¡Œçš„JavaScriptä»£ç 
document.addEventListener('DOMContentLoaded', function() {
    const collapsibles = document.querySelectorAll('.collapsible-trigger');
    const gameContent = document.getElementById('game-content');
    const choiceContainer = document.getElementById('choice-container');
    const openingScene = document.getElementById('opening-scene');
    const openingText = document.getElementById('opening-text');
    const goBackBtn = document.getElementById('go-back-btn');
    const finalStartBtn = document.getElementById('final-start-btn');
    const collapsibleWrapper = document.querySelector('.collapsible-wrapper');
    const greetingZhengdao = document.getElementById('greeting-zhengdao');
    const greetingModao = document.getElementById('greeting-modao');
    
    let selectedPath = '';
    const openingContent = {
        'æ­£é“': 'é’çŸ³æ¿é“ºå°±çš„å±±é“èœ¿èœ’æ›²æŠ˜ï¼Œæ²¡å…¥äº‘é›¾ç¼­ç»•çš„ç¾¤å±±æ·±å¤„ã€‚è¿™é‡Œæ˜¯ä¸œåŸŸï¼Œå¤ªä¸€å‰‘å®—çš„å±±è„šã€‚å®—é—¨å¤§å¼€ï¼Œå¹¿çº³å¼Ÿå­ï¼Œæ— æ•°æ€€æ£ç€ä»™ä¾ æ¢¦çš„å°‘å¹´å°‘å¥³ä»å››é¢å…«æ–¹æ¶Œæ¥ï¼Œå°†é™„è¿‘çš„å°é•‡æŒ¤å¾—æ°´æ³„ä¸é€š...',
        'é­”é“': 'æœˆè‰²å¦‚éœœï¼Œå†°å†·åœ°æ´’åœ¨äº‘æ°å¤æ—æ—ç³»åºœé‚¸çš„é’ç“¦ä¹‹ä¸Šã€‚äº‘æ›¦æœˆèœ·ç¼©åœ¨å±‹é¡¶æœ€é˜´æš—çš„è§’è½ï¼Œå°†è‡ªå·±çš„è„¸æ·±æ·±åŸ‹è¿›è†ç›–é‡Œã€‚æ™šé£å¹è¿‡ï¼Œæ‹‚åŠ¨å¥¹å¦‚æœˆå…‰èˆ¬æµæ³»çš„é“¶è‰²é•¿å‘ï¼Œå´å¹ä¸å¹²å¥¹çœ¼è§’çš„æ³ªç—•...'
    };

    collapsibles.forEach(button => {
        button.addEventListener('click', function() {
            const isActive = this.classList.contains('active');
            
            // å…³é—­æ‰€æœ‰å·²æ‰“å¼€çš„é¡¹
            document.querySelectorAll('.collapsible-trigger.active').forEach(activeButton => {
                activeButton.classList.remove('active');
                activeButton.nextElementSibling.style.maxHeight = null;
            });

            // å¦‚æœå½“å‰é¡¹ä¸æ˜¯åˆšåˆšè¢«å…³é—­çš„é‚£ä¸ªï¼Œåˆ™æ‰“å¼€å®ƒ
            if (!isActive) {
                this.classList.add('active');
                const content = this.nextElementSibling;
                content.style.maxHeight = content.scrollHeight + 'px';
            }
        });
    });

    choiceContainer.addEventListener('click', function(e) {
        if (e.target.classList.contains('choice-button')) {
            selectedPath = e.target.dataset.path;
            
            choiceContainer.style.display = 'none';
            openingScene.style.display = 'block';
            openingText.innerText = openingContent[selectedPath];
            
            gameContent.style.maxHeight = gameContent.scrollHeight + 'px';
        }
    });

    goBackBtn.addEventListener('click', function() {
        openingScene.style.display = 'none';
        choiceContainer.style.display = 'block';
        selectedPath = '';
        
        gameContent.style.maxHeight = choiceContainer.scrollHeight + 'px';
    });

    finalStartBtn.addEventListener('click', function() {
        if(selectedPath) {
            collapsibleWrapper.style.opacity = '0';
            
            // åœ¨åŠ¨ç”»ç»“æŸåå†éšè—ï¼Œé¿å…é—ªçƒ
            setTimeout(() => {
                collapsibleWrapper.style.display = 'none';
                if (selectedPath === 'æ­£é“') {
                    greetingZhengdao.style.display = 'block';
                } else if (selectedPath === 'é­”é“') {
                    greetingModao.style.display = 'block';
                }
            }, 800); // è¿™ä¸ªæ—¶é—´è¦å’ŒCSSé‡Œçš„transitionæ—¶é—´åŒ¹é…
        }
    });
});
</script>

